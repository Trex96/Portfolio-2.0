/* WebGL Background - Fixed full-screen with light cream color */
.gl-background {
  z-index: -1;
  width: 100vw;
  height: 100vh;
  position: fixed;
  inset: 0;
  pointer-events: none;
  background-color: #f4f4f0; /* Light cream matching original */
}

.gl-background svg {
  width: 100%;
  height: 100%;
}
